<Page x:Class="trpo12_voroshilov.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:trpo12_voroshilov.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <DockPanel LastChildFill="False">
            <ListView ItemsSource="{Binding service.Users}" DockPanel.Dock="Top" SelectedItem="{Binding user}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <StackPanel>
                                <TextBlock Text="{Binding Login}"/>
                                <TextBlock Text="{Binding Username}"/>
                                <TextBlock Text="{Binding Password}"/>
                                <TextBlock Text="{Binding Email}"/>
                                <TextBlock Text="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy}}"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackPanel DockPanel.Dock="Bottom">
                <Button Content="Добавить" Click="To_Add"/>
                <Button Content="Изменить" Click="To_Edit"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Page>
